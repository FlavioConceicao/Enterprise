
@model Sorvete
@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar</h1>

<form asp-action="Cadastrar" asp-controller="Sorvete">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="DataVencimento"></label>
        <input asp-for="DataVencimento" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Vegano"></label>
        <input asp-for="Vegano" />
    </div>
    <div class="form-group">
        <label asp-for="TipoSorvete"></label>
        <select asp-for="TipoSorvete" asp-items="@Html.GetEnumSelectList<Tipo>()">
            <option>Selecione</option>
        </select>
    </div>   
    <div><button class="btn btn-primary" type="submit" value="Cadastrar">Cadastrar</button></div>
</form>